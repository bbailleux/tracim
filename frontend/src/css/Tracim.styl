body
  overflow auto
  font-size standardFontSize
  min-height 100vh
  min-height -webkit-fill-available
  min-height -moz-available

html
  height -webkit-fill-available
  height -moz-available

.btn
  font-size standardFontSize

.tracim
  &__content
    height 100vh
    overflow hidden
    background-color veryLightGrey
    &-scrollview
      height 100%
      overflow-y auto
  &__pageBlock
    background rgba(0, 0, 0, 0.85) // INFO - RJ - 2020-07-06 - matches the dark background of the gallery
    position fixed
    z-index zIndexOverHeader
    top 0
    left 0
    right 0
    bottom 0
    &__cardPopupContent
      width 100%
      &__message
        margin standardSpacing
      &__buttons
        text-align end

#AppFullScreenManager
  display none

@import '~tracim_frontend_lib/src/css/Variable.styl'

.feedItemFooter
  display flex
  align-items center
  &__left
    display flex
    align-items center
    flex 1
    & .translateButton .iconbutton
      padding-top standardSpacing
      padding-inline-end 0
      padding-bottom standardSpacing
      padding-inline-start standardSpacing
  &__right
    display flex
    align-items center
    & .buttonComments
      padding standardSpacing
      margin-top textSpacing
      margin-bottom textSpacing
      margin-inline-end standardSpacing
      margin-inline-start 0px
    & .EmojiReactionButton__buttonpicker
      padding-top standardSpacing
      padding-inline-end standardSpacing
      padding-bottom standardSpacing
      padding-inline-start textSpacing
    &__participate
      padding standardSpacing
      margin-top textSpacing
      margin-bottom textSpacing
      margin-inline-end standardSpacing
      margin-inline-start 0px
      color darkGrey2
      border-radius standardBorderRadius
      & > span
        padding-inline-start textSpacing
      &:hover
        color fontColor
        background-color secodaryButtonHover
  &__comments
    margin-inline-start standardSpacing

.EmojiReactionButton__buttonpicker:focus
  outline none

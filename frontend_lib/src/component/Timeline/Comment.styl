@import '../../css/Variable.styl'

.buttonComments
  background-color transparent
  color darkGrey2
  &:hover
    color fontColor

.comment
  position relative
  margin textSpacing 0
  &:last-child
    margin-bottom 0
  &.isTheSameDateAndAuthorThatLastComment
    margin-top 0
    & .comment__header
      display none

  &:hover .comment__body__content__header__actions.dropdownMenuButton
    display unset

  &__header
    display flex
    align-items baseline
    margin-bottom 5px
    &__createdDate
      font-size metadataFontSize
      color darkGrey2
    & .profileNavigation
      font-weight bold
      font-size metadataFontSize
      max-width unset
    &.sent
      flex-direction row-reverse
      & .avatar-wrapper
        margin-inline-start standardSpacing
        margin-top auto
        margin-bottom auto
      & .profileNavigation
        margin-inline-start standardSpacing
      & > div
        display flex
        flex-direction column
        align-items flex-end
    &.received
      & .avatar-wrapper
        margin-inline-end standardSpacing
        margin-top auto
        margin-bottom auto
      & .profileNavigation
        margin-inline-end standardSpacing

  &__body
    padding standardSpacing
    border-radius standardBorderRadius
    background-color offWhite
    display flex
    flex-direction column
    &__content
      display flex
      flex-direction row
      flex 1
      &__text
        img
          max-width 100%
          height auto
          box-shadow 0px 0px 10px darkGrey1
        & a:not(.linkPreview)
          color bootstrapLinkColor
          &:hover
            color bootstrapLinkColor
            text-decoration underline
      &__textAndPreview
        flex 1

      &__header
        display flex
        align-items center
        flex-direction row
        margin-bottom standardSpacing
        font-size metadataFontSize
        &__meta
          flex 1
          &__author
            overflow-wrap anywhere
            font-size standardFontSize
            &:hover
              text-decoration underline
        &__actions.dropdownMenuButton
          padding 0
          color darkGrey2
          display none
          &::after
            display none
          &:hover
            color fontColor
          &:active, &:focus
            display unset

  &__footer
    display flex
    align-items center
    justify-content space-between

@media (max-width: max-xs)
  .buttonComments
    margin-inline-start textSpacing
    > .iconbutton__icon
      margin 0px

@import '../../../css/Variable.styl'

.currentColor
  color currentColor

.validateColor
  color validateColor

.cancelColor
  color cancelColor

.outdateColor
  color outdateColor

.content
  border-bottom 0
  cursor pointer
  font-weight bold
  &__item
    width 100%
    display flex
    align-items center
  &.read
    font-weight normal
    & .FilenameWithBadges__label
      font-weight normal
  &:hover
    background-color lightGrey1
    & > .content__name
      color offWhite
    & > .content__status
      color offWhite

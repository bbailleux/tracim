@import '../../css/Variable.styl'

.tagList
  &__list
    margin standardSpacing
    padding 0
    list-style none
    text-align center
    &__item
      display flex
      padding standardSpacing
      background-color lightGrey
      border-radius standardBorderRadius
      flex 1
      overflow hidden
      // NOTE - RJ - 2021-07-09 positioning puts the item above the triangle
      // allowing the label to be selectable from the start
      position relative
      &__info
        text-overflow ellipsis
        overflow hidden
        flex 1
        text-align start
        white-space pre
      &__circle
        width 8px
        height 8px
        top calc(50% - 5px)
        position absolute
        background-color lightGrey
        border-radius standardBorderRadius
        left 10px
        filter drop-shadow(0px 0px 2px grey)
      &__triangleIcon
        font-size 43px
        transform rotate(60deg)
        transform-origin top
        margin-inline-end -16px
        position relative
        left 16px
        top 15px
        color lightGrey
      &__wrapper
        position relative
        display flex
        flex-direction row
        margin-inline-start standardSpacing
        margin-bottom standardSpacing
        filter drop-shadow(0px 1px 3px grey)

[dir=rtl]
  .tagList__list__item
    &__circle
      right 10px
    &__triangleIcon
      left 9px
      top 0px
  #triangeIcon
    transform none

@media (max-width: max-lg)
  .tagList
    width 100%

@media (max-width: min-sm) and (max-width: max-sm)
  .tagList
    &__list
      &__item
        width 85%

@media (max-width: max-xs)
  .tagList
    &__wrapper
      height auto
    &__list
      height auto
      overflow-y auto
